<Page
    x:Class="DataWizard.UI.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataWizard.UI.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ScottPlot="using:ScottPlot.WinUI"
    mc:Ignorable="d"
    Background="White">
    <!-- KODE SUCCEST RECENT FILE 18/05/2025 -->
    <Grid>
        <!-- Main layout with sidebar and content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="1" Padding="24">
            <!-- Header Section with Background -->
            <Grid Background="Transparent" 
                  Margin="0,0,0,40" 
                  Height="300"
                  VerticalAlignment="Top"
                  Canvas.ZIndex="0">
                <Image Source="/Assets/bgHomepage.png" 
                       Stretch="Fill"/>
            </Grid>

            <!-- Header Content Layout -->
            <Grid Height="300" VerticalAlignment="Top" Canvas.ZIndex="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header Text in Center -->
                <StackPanel Grid.Column="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <TextBlock>
                        <Run Text="Smart " FontWeight="ExtraBold" FontSize="50" Foreground="#2f3e9e"/>
                        <Run Text="document creation" FontWeight="ExtraBold" FontSize="50" Foreground="#5c5edc"/>
                        <LineBreak/>
                        <Run Text="powered by " FontWeight="ExtraBold" FontSize="50" Foreground="#2f3e9e"/>
                        <Run Text="AI" FontWeight="ExtraBold" FontSize="50" Foreground="#5c5edc"/>
                    </TextBlock>
                    <TextBlock Text="Quicklytics helps you instantly turn your"
                               FontSize="18" 
                               Foreground="Black"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Top Right User Controls -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="top" 
                            Spacing="15" 
                            Margin="0,30,30,200">
                    <Grid Background="White" 
                          CornerRadius="15" 
                          Padding="12,8" 
                          BorderThickness="1"
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PersonPicture ProfilePicture="/Assets/download 4.png" 
                                         Width="25" Height="25"/>
                            <Button x:Name="UserProfileButton" Background="Transparent" Click="UserProfileButton_Click">
                                <Image Source="/Assets/Settings.png" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- New Project Button -->
            <Button x:Name="NewProjectButton"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,320,0,0"
                    Canvas.ZIndex="2"
                    Padding="24,12"
                    CornerRadius="15"
                    Click="NewProjectButton_Click">

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Grid Background="White" 
                          Width="32" Height="32" 
                          CornerRadius="16">
                        <TextBlock Text="+" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Foreground="#3b7de1"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Grid>
                    <TextBlock Text="New Project" 
                              FontSize="18"
                              VerticalAlignment="Center"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <!-- Main Grid -->
            <Grid Margin="0,400,0,0" ColumnSpacing="32" Canvas.ZIndex="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Files -->
                <Grid Grid.Column="0" 
                      BorderBrush="#a9c7f7" 
                      BorderThickness="2" 
                      CornerRadius="12"
                      Padding="24"
                      Background="White">
                    <StackPanel>
                        <TextBlock Text="Recent Activities" 
                                 FontSize="20" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,24"
                                 HorizontalAlignment="Center"/>
                        <StackPanel x:Name="RecentFilesPanel" Spacing="8"/>
                    </StackPanel>
                </Grid>

                <!-- Chart -->
                <!-- Chart -->
                <Grid Grid.Column="1"
      BorderBrush="#a9c7f7"
      BorderThickness="2"
      CornerRadius="12"
      Padding="24"
      Background="White">
                    <StackPanel>
                        <TextBlock Text="Usage Statistics"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,24"
                   HorizontalAlignment="Center"/>
                        <ScottPlot:WinUIPlot x:Name="UsageChart" 
                    Height="300"
                    Background="White"
                    Loaded="UsageChart_Loaded"/>
                    </StackPanel>
                </Grid>
                <!-- Rest of your existing XAML code -->
                <!-- Folders -->
                <Grid Grid.Column="2" 
                      BorderBrush="#a9c7f7" 
                      BorderThickness="2" 
                      CornerRadius="12"
                      Padding="24"
                      Background="White">
                    <StackPanel>
                        <TextBlock Text="Folders" 
                                 FontSize="20" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,24"
                                 HorizontalAlignment="Center"/>
                        <StackPanel x:Name="FoldersPanel" Spacing="16"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
